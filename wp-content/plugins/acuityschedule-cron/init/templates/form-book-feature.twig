<form id="book_now" class="form-schedule-feature" name="book_now" method="post" action="">
  <div class="form-item">
    {% include "area.twig" %}
    {% if area_message %}
      <div class="message">{{ area_message }}</div>
    {% endif %}
  </div>

  <div class="form-item">
    <select name="client_service" class="select-two client-service">
      <option selected="" disabled="" value="">Choose a service</option>
      {% for item in cat_app %}
        {% set term = TimberTerm(item.term_id) %}
        <optgroup label="{{ item.name }}">
        {% for post in term.get_posts %}
          <option data-id="{{ post._cmb2_asc_app_id }}" value="{{ post.id }}">{{ post.title }}</option>
        {% endfor %}
        </optgroup>
      {% endfor %}
    </select>

    {% if service_message %}
      <div class="message">{{ service_message }}</div>
    {% endif %}
  </div>

  <div class="form-item">
    <input type="text" name="client_date" placeholder="Pick a date" class="client-date">
    {% if date_message %}
      <div class="message">{{ date_message }}</div>
    {% endif %}
  </div>

  <div class="form-item">
    <div class="datetime-chose">
      <span>Find A Time</span>
    </div>
    {% if time_message %}
      <div class="message">{{ time_message }}</div>
    {% endif %}
  </div>

  <div class="box-from-contact__button">
    <input type="submit" name="action" value="Book Now" class="wpcf7-form-control wpcf7-submit button">
  </div>
</form>
