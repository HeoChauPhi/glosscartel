<div class="box-product-sale_item">
  <div class="box-product-sale__image">
    <img src="{{item.service_product_image}}">
  </div>
  <h2 class="box-product-sale__title">{{item.name}}</h2>
  <div class="box-product-sale__content">
    <div class="box-product-sale__from">
      <div class="text">from</div>
      <div class="number">{{item.service_product_about_sale}}</div>
    </div>
  </div>
</div>
{% if item.children %}
  {% for child in item.children %}
    <div class="box-product-sale_item">
      <div class="box-product-sale__image">
        <img src="{{child.service_product_image}}">
      </div>
      <h2 class="box-product-sale__title">{{child.name}}</h2>
      <div class="box-product-sale__content">
        <div class="box-product-sale__from">
          <div class="text">from</div>
          <div class="number">{{child.service_product_about_sale}}</div>
        </div>
      </div>
    </div>
  {% endfor %}
{% endif %}
